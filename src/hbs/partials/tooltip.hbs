<div class="tooltip-title">
    <span>{{length}}</span>
    <h5>{{title}}</h5>
</div>
<div class="tooltip-body">
    {{#if externals}}
    <div>
        <h6>Externals</h6>
        <ul>
            {{#each externals}}
                <li>
                    {{#if Attachments}}
                    <a target="_blank" href="{{AttachmentFiles.URL}}">{{Title}}</a>
                    {{else}}
                    <span>{{Title}}</span>
                    {{/if}}
                </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    {{#if internals}}
    <div>
        <h6>Internals</h6>
        <ul>
            {{#each internals}}
            <li>
                {{#if Attachments}}
                <a target="_blank" href="{{AttachmentFiles.URL}}">{{Title}}</a>
                {{else}}
                <span>{{Title}}</span>
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
</div>